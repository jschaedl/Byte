<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project>
<project name="Byte Tasks" default="01 phpunit">
	<property name="PHP_VERSION" value="5.4.10"/>
	<property name="PHP_EXECUTABLE" value="/Applications/MAMP/bin/php/php${PHP_VERSION}/bin/php"/>
	<target name="01 phpunit">
	    <exec executable="${PHP_EXECUTABLE}">
	        <arg value="vendor/bin/phpunit"/>
	        <arg value="--verbose"/>
	  </exec>
	</target>
	<target name="02 phploc">
	    <exec executable="${PHP_EXECUTABLE}">
	        <arg value="vendor/bin/phploc"/>
	    	<arg value="library"/>
	    </exec>
	</target>
</project>